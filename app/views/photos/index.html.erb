<h1>Salones de Fiestas</h1>
<table>
  <tbody>
    <% @photos.each do |photo| %>
<tr>
        <td class="image">
          <%= image_tag(photo.image, class: 'list_image', style: 'display: block; margin: auto; width:100%; max-width:300px;left top no-repeat; height:100%; max-height:300px;')%>
        </td>
        <td class="description">
          <h1><%= photo.name %></h1>
          <div class="price">
            <%= number_to_currency(photo.price) %>
          </div>
          <p>
            <%= truncate(strip_tags(photo.description), length: 80) %>
          </p>
        </td>

        <td class="actions">
          <ul>
            <% if user_signed_in? %>
            <li><%= link_to 'Modificar', edit_photo_path(photo), :class => 'btn btn-success' %></li>
            <li><%= link_to 'Eliminar', photo, 
                          method: :delete,
                          data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></li>
            <% end %>
          </ul>
        </td>
        <% end %>
        <br><br>
      </tr>
  </tbody>
</table>

