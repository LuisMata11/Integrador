             <div class="container wow fadeInUp">
      <div class="row">
        <div class="col-md-12">
          <h3 class="section-title">Salones En Dolores Hidalgo</h3>
          <div class="section-title-divider"></div>
          <p class="section-description">Los salones disponibles en la ciudad de Dolores Hidalgo, son salones con calidad, para ofrecerle el mejor servicio y disfrute al máximo de su evento.</p>
        </div>
      </div>
    </div>
         <% @photos.each do |photo| %>
    <div class="container about-container wow fadeInUp">
      <div class="row"> 
        
        <div class="col-md-6 about-content">

               <%= image_tag(photo.image, :style => 'width:100%; max-width:300px;left top no-repeat; height:100%; max-height:300px;') %>     

        </div>
          
        <div class="col-md-6">

          <h2 class="about-title"><%= photo.name %></h2>
          <p class="about-text">
            <%= photo.description %>
          </p>
          <h4>$ <%= photo.price %> pesos</h4>


        </div>
      </div>
      <br>
         <% if user_signed_in? %>
      <%= link_to 'Modificar', edit_photo_path(photo), :class => 'btn btn-success' %>
            <%= link_to 'Eliminar', photo, 
                          method: :delete,
                          data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
      <% end %>
    </div>
         </div> 
    <% end %>
    <br>

  <% if user_signed_in? %>
            <%= link_to 'Agregar Salón', new_photo_path, :class => 'btn btn-info' %>
    <% end %>
